---
// Componente Portfolio para mostrar proyectos
const projects = [
  {
    title: 'CyberDash Analytics',
    description: 'Dashboard futurista para análisis de datos en tiempo real con visualizaciones interactivas y métricas avanzadas.',
    tags: ['Vue.js', 'Laravel', 'D3.js', 'Redis']
  },
  {
    title: 'NeonCorp E-Commerce',
    description: 'Plataforma de comercio electrónico con tema cyberpunk, sistema de pagos integrado y gestión de inventario automatizada.',
    tags: ['React', 'Node.js', 'MongoDB', 'Stripe']
  },
  {
    title: 'SecureChat Matrix',
    description: 'Sistema de mensajería encriptada con interfaz Matrix-style, rooms públicos y privados, y autenticación multifactor.',
    tags: ['TypeScript', 'Socket.io', 'Express', 'PostgreSQL']
  },
  {
    title: 'Neural Network Manager',
    description: 'Panel de control para gestión de servidores con monitoreo en tiempo real, alertas automáticas y deploy automatizado.',
    tags: ['Vue.js', 'Symfony', 'Docker', 'Redis']
  },
  {
    title: 'Quantum Task Manager',
    description: 'Sistema de gestión de tareas con IA integrada, automatización de workflows y análisis predictivo de productividad.',
    tags: ['React', 'NestJS', 'MySQL', 'TensorFlow']
  },
  {
    title: 'Holographic CRM',
    description: 'Sistema CRM futurista con interfaz holográfica, gestión de leads automatizada y analytics avanzados de ventas.',
    tags: ['Vue.js', 'Laravel', 'Elasticsearch', 'Chart.js']
  }
];
---

<section class="py-20 bg-[#0a0a0a]" id="portfolio">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-bold text-center mb-16 text-transparent bg-clip-text bg-gradient-to-r from-fuchsia-500 to-cyan-400 font-['Orbitron']">
      PORTFOLIO
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => (
        <div class="group relative bg-[#1a1a1a] border border-fuchsia-500 rounded-lg overflow-hidden transition-all duration-300 hover:shadow-lg hover:shadow-fuchsia-500/20 hover:-translate-y-2">
          {/* Efecto de brillo al pasar el ratón */}
          <div class="absolute inset-0 bg-gradient-to-br from-fuchsia-500/10 to-cyan-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          
          <div class="p-6 relative z-10">
            <h3 class="text-xl font-bold text-cyan-400 mb-3 group-hover:text-fuchsia-400 transition-colors duration-300">
              {project.title}
            </h3>
            <p class="text-gray-300 mb-4">{project.description}</p>
            
            <div class="flex flex-wrap gap-2 mt-4">
              {project.tags.map(tag => (
                <span class="text-xs font-mono px-3 py-1 bg-fuchsia-900/50 text-fuchsia-300 rounded-full border border-fuchsia-500/30">
                  {tag}
                </span>
              ))}
            </div>
          </div>
          
          {/* Efecto de borde inferior */}
          <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-fuchsia-500 to-cyan-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Efecto de glitch en los títulos al pasar el ratón */
  .group:hover h3 {
    position: relative;
  }
  
  .group:hover h3::before,
  .group:hover h3::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #0a0a0a;
  }
  
  .group:hover h3::before {
    animation: glitch-1 0.3s infinite;
    color: #ff00ff;
    z-index: -1;
  }
  
  .group:hover h3::after {
    animation: glitch-2 0.3s infinite;
    color: #00ffff;
    z-index: -2;
  }
  
  @keyframes glitch-1 {
    0%, 14%, 15%, 49%, 50%, 99%, 100% { transform: translate(0); }
    1%, 13% { transform: translate(-2px, 1px); }
    16%, 48% { transform: translate(1px, -1px); }
  }
  
  @keyframes glitch-2 {
    0%, 20%, 21%, 62%, 63%, 99%, 100% { transform: translate(0); }
    1%, 19% { transform: translate(2px, 1px); }
    22%, 61% { transform: translate(-1px, -2px); }
  }
</style>
